<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="hr_contract_view" model="ir.ui.view">
            <field name="name">hr.contract.form (hr_contract_unique_calendar)</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='working_hours']" position="attributes">
                    <attribute name="domain">[('unique_calendar', '=', False)]</attribute>
                    <attribute name="context">{'default_unique_calendar': True}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</openerp>